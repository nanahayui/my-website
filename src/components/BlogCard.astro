---
import FormattedDate from './FormattedDate.astro'

interface Props {
  title: string
  date: Date
  category: string
  slug: string
}

const { title, date, category, slug } = Astro.props
---

<div class="my-4">
  <ul>
    <div class="flex flex-col rounded border border-gray-300 p-3 md:p-4">
      <a href={`/blog/${slug}`}>
        <h2 class="text-lg font-bold hover:underline hover:decoration-solid md:text-xl">{title}</h2>
      </a>
      <div class="mt-3 flex items-center justify-between md:mt-4">
        <span class="rounded-full bg-gray-200 px-3 py-1 text-xs text-gray-700"> {category} </span>
        <div class="text-xs text-slate-500 md:text-sm">
          <FormattedDate date={date} />
        </div>
      </div>
    </div>
  </ul>
</div>
