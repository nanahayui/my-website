---
export interface Props {
  aspectRatio?: number
  class?: string
  isWide?: boolean
  isPanoramic?: boolean
}

const {
  aspectRatio = 1.5,
  class: className = '',
  isWide = false,
  isPanoramic = false,
} = Astro.props
---

<div
  class={`skeleton-container ${className} ${isPanoramic ? 'panoramic' : isWide ? 'wide' : ''}`}
  style={`aspect-ratio: ${aspectRatio}`}
  data-aspect-ratio={aspectRatio}
>
  <div class="skeleton-shimmer"></div>
</div>

<style>
  .skeleton-container {
    position: relative;
    background-color: #e5e7eb;
    border-radius: 6px;
    overflow: hidden;
    width: 100%;
  }

  /* 横長画像の最小高さ調整（実際の画像と同じ設定） */
  .skeleton-container.wide {
    min-height: 140px;
  }

  .skeleton-container.panoramic {
    min-height: 100px;
  }

  /* レスポンシブ対応 */
  @media (min-width: 640px) {
    .skeleton-container.wide {
      min-height: 180px;
    }

    .skeleton-container.panoramic {
      min-height: 140px;
    }
  }

  @media (min-width: 768px) {
    .skeleton-container.wide {
      min-height: 220px;
    }

    .skeleton-container.panoramic {
      min-height: 180px;
    }
  }

  @media (min-width: 1024px) {
    .skeleton-container.wide {
      min-height: 200px;
    }

    .skeleton-container.panoramic {
      min-height: 160px;
    }
  }

  @media (min-width: 1280px) {
    .skeleton-container.wide {
      min-height: 220px;
    }

    .skeleton-container.panoramic {
      min-height: 180px;
    }
  }

  .skeleton-shimmer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    animation: shimmer 1.5s infinite;
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  /* ダークモード対応 */
  @media (prefers-color-scheme: dark) {
    .skeleton-container {
      background-color: #374151;
    }

    .skeleton-shimmer {
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    }
  }
</style>
