---
import LayoutTop from '../layouts/LayoutTop.astro'
---

<LayoutTop description="七羽結のウェブサイト">
  <main class="flex h-screen flex-col items-center justify-center">
    <h1 class="text-4xl font-bold md:text-6xl dark:text-slate-100">Yui's Web</h1>
    <div class="mt-4 flex flex-row items-center space-x-4">
      <a
        class="mt-6 rounded border border-slate-500 bg-slate-700 bg-transparent px-4 py-2 font-bold text-slate-700 hover:border-transparent hover:bg-slate-600 hover:text-slate-100 dark:text-slate-100"
        href="/blog/page/1"
        title="Blog"
      >
        Blog
      </a>
      <a
        class="mt-6 rounded border border-slate-500 bg-slate-700 bg-transparent px-4 py-2 font-bold text-slate-700 hover:border-transparent hover:bg-slate-600 hover:text-slate-100 dark:text-slate-100"
        href="/gallery"
        title="Gallery"
      >
        Gallery
      </a>
    </div>
  </main>
</LayoutTop>
